<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="odooexp_patients_form" model="ir.ui.view">
        <field name="name">odooexp.patients.form</field>
        <field name="model">odooexp.patients</field>
        <field name="arch" type="xml">
            <form string="my_form">
                <sheet>
                    <group>
                        <field name="name" />
                        <group string="Patient info">
                            <field name="age" />
                            <field name="email" />
                            <field name="phone" />
                        </group>
                        <group string="Clinic data">
                            <field name="is_patient" />
                        </group>
                        <field name="medical_history" />
                    </group>
                </sheet>
                <!-- <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user" />
                    <field name="activity_ids" />
                    <field name="message_ids" />
                </div> -->
            </form>
        </field>
    </record>
</odoo>